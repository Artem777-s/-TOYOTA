  <!-- LIGHTBOX GALLERY -->
  <div class="lb" id="lightbox" aria-hidden="true">
    <div class="lb-card" role="dialog" aria-modal="true" aria-label="–ì–∞–ª–µ—Ä–µ—è">
      <div class="lb-top">
        <div class="lb-title" id="lbTitle">–ü—Ä–æ—Å–º–æ—Ç—Ä</div>
        <div style="display:flex; gap:10px; align-items:center;">
          <button class="btn small max" id="lbFit" type="button">–í–ø–∏—Å–∞—Ç—å</button>
          <button class="btn small max" id="lbOne" type="button">100%</button>
          <button class="lb-close" id="lbClose" type="button" aria-label="–ó–∞–∫—Ä—ã—Ç—å">√ó</button>
        </div>
      </div>

      <div class="lb-body">
        <button class="lb-nav left" id="lbPrev" type="button" aria-label="–ü—Ä–µ–¥—ã–¥—É—â–∏–π">‚Äπ</button>
        <div class="lb-stage" id="lbStage">
          <img class="lb-img" id="lbImg" alt="–£–≤–µ–ª–∏—á–µ–Ω–Ω–æ–µ –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ" />
        </div>
        <button class="lb-nav right" id="lbNext" type="button" aria-label="–°–ª–µ–¥—É—é—â–∏–π">‚Ä∫</button>
      </div>

      <div class="lb-cap" id="lbCap"></div>
      <div class="lb-thumbs" id="lbThumbs"></div>
    </div>
  </div>

  <script>
    // ===== Prefill: "–ø–æ–ª—É—á–∏—Ç—å —Ñ–æ—Ç–æ/–≤–∏–¥–µ–æ" =====
    (function(){
      const TG_USER = "Kashcars";
      const btn = document.getElementById("btnProof");
      if(!btn) return;
      const txt = encodeURIComponent(
        "–ó–¥—Ä–∞–≤—Å—Ç–≤—É–π—Ç–µ! –ù—É–∂–µ–Ω –∫–æ–º–ø–ª–µ–∫—Ç –≥–∏–¥—Ä–æ–ø–æ–¥–≤–µ—Å–∫–∏ AHC LX570/LC200.\n" +
        "–ü—Ä–∏—à–ª–∏—Ç–µ, –ø–æ–∂–∞–ª—É–π—Å—Ç–∞, —Ñ–æ—Ç–æ/–≤–∏–¥–µ–æ –∫–æ–º–ø–ª–µ–∫—Ç–∞ –∏ –ø–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç–µ —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –ø–æ VIN.\n" +
        "VIN: (–≤–ø–∏—à—É)"
      );
      btn.href = `https://t.me/${TG_USER}?text=${txt}`;
      btn.target = "_blank";
      btn.rel = "noopener";
    })();

    // ===== Carousel + autoplay + swipe =====
    (function () {
      const root = document.getElementById("componentsCarousel");
      if (!root) return;

      const track = root.querySelector(".carousel-track");
      const slides = Array.from(root.querySelectorAll(".carousel-slide"));
      const prevBtn = root.querySelector("[data-car-prev]");
      const nextBtn = root.querySelector("[data-car-next]");
      const dotsRoot = document.getElementById("componentsDots");

      let index = 0;
      let startX = 0, dx = 0, isDown = false;

      const AUTOPLAY_MS = 3800;
      let timer = null, paused = false;

      function render(){
        track.style.transform = `translateX(${-index * 100}%)`;
        dotsRoot?.querySelectorAll(".dot").forEach((d,i)=>d.classList.toggle("active", i===index));
      }
      function next(){ index = (index+1) % slides.length; render(); }
      function prev(){ index = (index-1+slides.length) % slides.length; render(); }
      function goTo(i){ index = Math.max(0, Math.min(slides.length-1, i)); render(); }

      if(dotsRoot){
        dotsRoot.innerHTML="";
        slides.forEach((_,i)=>{
          const dot=document.createElement("button");
          dot.type="button";
          dot.className="dot"+(i===0?" active":"");
          dot.addEventListener("click", ()=>{goTo(i); restartAutoplay();});
          dotsRoot.appendChild(dot);
        });
      }

      prevBtn?.addEventListener("click", ()=>{prev(); restartAutoplay();});
      nextBtn?.addEventListener("click", ()=>{next(); restartAutoplay();});

      root.addEventListener("pointerdown",(e)=>{
        isDown=true; startX=e.clientX; dx=0;
        root.setPointerCapture(e.pointerId);
        pauseAutoplay();
      });
      root.addEventListener("pointermove",(e)=>{ if(!isDown) return; dx=e.clientX-startX; });
      root.addEventListener("pointerup",()=>{
        if(!isDown) return;
        isDown=false;
        const t=50;
        if(dx>t) prev(); else if(dx<-t) next();
        restartAutoplay();
      });

      root.addEventListener("mouseenter", pauseAutoplay);
      root.addEventListener("mouseleave", restartAutoplay);
      document.addEventListener("visibilitychange", ()=> document.hidden ? pauseAutoplay() : restartAutoplay());

      function startAutoplay(){
        if(timer || paused || slides.length<=1) return;
        timer=setInterval(()=>{ if(!paused) next(); }, AUTOPLAY_MS);
      }
      function pauseAutoplay(){ paused=true; if(timer){clearInterval(timer); timer=null;} }
      function restartAutoplay(){ paused=false; if(timer){clearInterval(timer); timer=null;} startAutoplay(); }

      render();
      startAutoplay();
    })();

    // ===== Quiz (2 questions -> TG prefill) =====
    (function(){
      const TG_USER="Kashcars";
      const step1=document.getElementById("step1");
      const step2=document.getElementById("step2");
      const bar=document.getElementById("quizBar");
      const toTG=document.getElementById("quizToTG");

      let q1=null,q2=null;
      if(bar) bar.style.width="50%";

      function updateLink(pulse){
        const msg =
          "–ö–≤–∏–∑ —Å —Å–∞–π—Ç–∞ (–≥–∏–¥—Ä–æ–ø–æ–¥–≤–µ—Å–∫–∞ AHC):\n" +
          `–ê–≤—Ç–æ: ${q1 || "‚Äî"}\n` +
          `–ü—Ä–æ–±–ª–µ–º–∞: ${q2 || "‚Äî"}\n\n` +
          "–ù—É–∂–Ω–∞ –ø—Ä–æ–≤–µ—Ä–∫–∞ —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç–∏ –ø–æ VIN –∏ —Ñ–æ—Ç–æ/–≤–∏–¥–µ–æ –∫–æ–º–ø–ª–µ–∫—Ç–∞.\nVIN: (–≤–ø–∏—à—É)";
        const url = `https://t.me/${TG_USER}?text=${encodeURIComponent(msg)}`;
        toTG.href=url; toTG.target="_blank"; toTG.rel="noopener";
        if(pulse){ toTG.style.boxShadow="0 16px 36px rgba(225,29,72,.28)"; setTimeout(()=>toTG.style.boxShadow="", 600); }
      }
      updateLink();

      step1?.addEventListener("click",(e)=>{
        const b=e.target.closest("[data-q1]");
        if(!b) return;
        q1=b.getAttribute("data-q1");
        step1.classList.remove("active");
        step2.classList.add("active");
        if(bar) bar.style.width="100%";
        updateLink();
      });
      step2?.addEventListener("click",(e)=>{
        const b=e.target.closest("[data-q2]");
        if(!b) return;
        q2=b.getAttribute("data-q2");
        updateLink(true);
      });
    })();

    // ===== VIN form -> TG prefill =====
    (function () {
      const TG_USER = "Kashcars";
      const form = document.getElementById("leadForm");
      const successBox = document.getElementById("successBox");
      const fallbackLink = document.getElementById("fallbackLink");
      if (!form) return;

      const s = (v)=> (v||"").toString().trim();

      form.addEventListener("submit", function (e) {
        e.preventDefault();
        const vin = s(document.getElementById("vinInput").value);
        const phone = s(document.getElementById("phoneInput").value);
        const channel = s(document.getElementById("channel").value);
        const comment = s(document.getElementById("comment").value);

        if (!vin || !phone) { alert("–ü–æ–∂–∞–ª—É–π—Å—Ç–∞, –∑–∞–ø–æ–ª–Ω–∏—Ç–µ VIN –∏ —Ç–µ–ª–µ—Ñ–æ–Ω."); return; }

        const msg = [
          "–ó–∞—è–≤–∫–∞ —Å —Å–∞–π—Ç–∞ (–≥–∏–¥—Ä–æ–ø–æ–¥–≤–µ—Å–∫–∞ AHC LX570 / LC200):",
          `VIN: ${vin}`,
          `–¢–µ–ª–µ—Ñ–æ–Ω: ${phone}`,
          `–£–¥–æ–±–Ω–æ —Å–≤—è–∑–∞—Ç—å—Å—è: ${channel === "call" ? "–ó–≤–æ–Ω–æ–∫" : (channel === "max" ? "MAX" : "Telegram")}`,
          comment ? `–ö–æ–º–º–µ–Ω—Ç–∞—Ä–∏–π: ${comment}` : null,
          "",
          "–ü—Ä–æ—à—É –ø–æ–¥—Ç–≤–µ—Ä–¥–∏—Ç—å —Å–æ–≤–º–µ—Å—Ç–∏–º–æ—Å—Ç—å –∏ –ø—Ä–∏—Å–ª–∞—Ç—å —Ñ–æ—Ç–æ/–≤–∏–¥–µ–æ –∫–æ–º–ø–ª–µ–∫—Ç–∞."
        ].filter(Boolean).join("\n");

        const tgUrl = `https://t.me/${TG_USER}?text=${encodeURIComponent(msg)}`;

        if (successBox) successBox.style.display = "block";
        if (fallbackLink) fallbackLink.href = tgUrl;

        window.open(tgUrl, "_blank", "noopener,noreferrer");
      });
    })();

    // ===== Lightbox gallery: components + reviews =====
    (function(){
      const lb = document.getElementById("lightbox");
      const lbImg = document.getElementById("lbImg");
      const lbCap = document.getElementById("lbCap");
      const lbTitle = document.getElementById("lbTitle");
      const lbClose = document.getElementById("lbClose");
      const lbPrev = document.getElementById("lbPrev");
      const lbNext = document.getElementById("lbNext");
      const lbThumbs = document.getElementById("lbThumbs");
      const lbStage = document.getElementById("lbStage");
      const btnFit = document.getElementById("lbFit");
      const btnOne = document.getElementById("lbOne");

      if(!lb || !lbImg || !lbThumbs || !lbStage) return;

      const components = Array.from(document.querySelectorAll('[data-gallery="components"]'))
        .map(el => ({src: el.getAttribute("src"), cap: el.getAttribute("data-cap") || el.alt || "–§–æ—Ç–æ"}));

      const reviews = Array.from(document.querySelectorAll('#reviewsGrid .rev'))
        .map(btn => ({src: btn.getAttribute("data-src"), cap: btn.getAttribute("data-cap") || "–û—Ç–∑—ã–≤"}));

      const galleries = { components, reviews };

      let currentGallery = "components";
      let index = 0;

      function renderThumbs(){
        lbThumbs.innerHTML = "";
        galleries[currentGallery].forEach((it, i)=>{
          const b=document.createElement("button");
          b.type="button";
          if(i===index) b.className="active";
          const im=document.createElement("img");
          im.src=it.src; im.alt=it.cap||"thumb";
          b.appendChild(im);
          b.addEventListener("click",()=>openAt(i));
          lbThumbs.appendChild(b);
        });
        lbThumbs.querySelector("button.active")?.scrollIntoView({block:"nearest", inline:"center"});
      }

      function setFit(){
        lbImg.style.maxWidth="100%";
        lbImg.style.maxHeight="100%";
        lbImg.style.width="";
        lbImg.style.height="";
        lbStage.scrollTop=0; lbStage.scrollLeft=0;
      }

      function setOneToOne(){
        lbImg.style.maxWidth="none";
        lbImg.style.maxHeight="none";
        lbImg.style.width="auto";
        lbImg.style.height="auto";
      }

      function openAt(i){
        const items = galleries[currentGallery];
        if(!items.length) return;
        index = Math.max(0, Math.min(items.length-1, i));
        const it = items[index];

        lbImg.src = it.src;
        lbCap.textContent = it.cap || "";
        lbTitle.textContent = currentGallery === "reviews" ? "–û—Ç–∑—ã–≤—ã (Avito)" : "–§–æ—Ç–æ –∫–æ–º–ø–ª–µ–∫—Ç–∞";

        lb.classList.add("open");
        lb.setAttribute("aria-hidden","false");
        document.body.style.overflow="hidden";

        setFit();
        renderThumbs();
      }

      function close(){
        lb.classList.remove("open");
        lb.setAttribute("aria-hidden","true");
        lbImg.src="";
        document.body.style.overflow="";
      }

      function next(){
        const items=galleries[currentGallery];
        index=(index+1)%items.length;
        openAt(index);
      }
      function prev(){
        const items=galleries[currentGallery];
        index=(index-1+items.length)%items.length;
        openAt(index);
      }

      document.addEventListener("click",(e)=>{
        const rev = e.target.closest('#reviewsGrid .rev');
        if(rev){
          currentGallery="reviews";
          const src=rev.getAttribute("data-src");
          const i=galleries.reviews.findIndex(x=>x.src===src);
          openAt(i>=0?i:0);
          return;
        }
        const img = e.target.closest('[data-gallery="components"]');
        if(img){
          currentGallery="components";
          const src=img.getAttribute("src");
          const i=galleries.components.findIndex(x=>x.src===src);
          openAt(i>=0?i:0);
        }
      });

      lbClose?.addEventListener("click", close);
      lbPrev?.addEventListener("click", prev);
      lbNext?.addEventListener("click", next);
      btnFit?.addEventListener("click", setFit);
      btnOne?.addEventListener("click", setOneToOne);
      lb.addEventListener("click",(e)=>{ if(e.target===lb) close(); });

      document.addEventListener("keydown",(e)=>{
        if(!lb.classList.contains("open")) return;
        if(e.key==="Escape") close();
        if(e.key==="ArrowLeft") prev();
        if(e.key==="ArrowRight") next();
      });

      let sx=0, dx=0, down=false;
      lbStage.addEventListener("pointerdown",(e)=>{ down=true; sx=e.clientX; dx=0; lbStage.setPointerCapture(e.pointerId); });
      lbStage.addEventListener("pointermove",(e)=>{ if(!down) return; dx=e.clientX-sx; });
      lbStage.addEventListener("pointerup",()=>{ if(!down) return; down=false; if(dx>60) prev(); else if(dx<-60) next(); });
    })();
  </script>

